@model IEnumerable<SellingKoi.Models.Farm>

@{
    ViewData["Title"] = "Farm Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Farm Management</h2>
        <a asp-controller="Farm" asp-action="CreateFarm" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Farm
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Farm Name</th>
                            <th>Owner</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var farm in Model)
                        {
                            <tr>
                                <td>@farm.Name</td>
                                <td>@farm.Owner</td>
                                <td>
                                    <a asp-controller="Farm" asp-action="DetailsFarm" asp-route-id="@farm.Id" class="btn btn-info btn-sm">Details</a>
                                    <a asp-controller="Farm" asp-action="UpdateFarm" asp-route-id="@farm.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteFarmModal-@farm.Id">
                                        Delete
                                    </button>

                                    <!-- Delete Confirmation Modal -->
                                    <div class="modal fade" id="deleteFarmModal-@farm.Id" tabindex="-1" role="dialog" aria-labelledby="deleteFarmModalLabel-@farm.Id" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteFarmModalLabel-@farm.Id">Confirm Deletion</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete the farm "@farm.Name"?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <form asp-controller="Farm" asp-action="NegateFarm" asp-route-id="@farm.Id" method="post">
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
