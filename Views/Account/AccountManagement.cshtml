@model IEnumerable<SellingKoi.Models.Account>

@{
    ViewData["Title"] = "Account Management";
    Layout = "_Layout"; // Ensure this matches your layout file name
}

<div class="container mt-4">
    <div class="mb-4">
        <h2>Account Management</h2>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>Username</th>
                            <th>Full Name</th>
                            <th>Registration Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.Where(a => a.Role != "ADMIN"))
                        {
                            <tr>
                                <td>@account.Username</td>
                                <td>@account.Fullname</td>
                                <td>@account.Registration_date.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-action="DetailsAccount" asp-route-id="@account.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deleteAccountModal-@account.Id">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>

                                    <!-- Delete Confirmation Modal -->
                                    <div class="modal fade" id="deleteAccountModal-@account.Id" tabindex="-1" role="dialog" aria-labelledby="deleteAccountModalLabel-@account.Id" aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteAccountModalLabel-@account.Id">Confirm Deletion</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete the account "@account.Username"?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <form asp-action="NegateAccount" asp-route-id="@account.Id" method="post">
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
